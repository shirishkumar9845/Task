<%= form_for(@location, html: { class: "form-horizontal" }) do |f| %>

<fieldset>
  <div class="row-fluid">

    <div class="span5">

      <div class="control-group">
        <%= f.label :customer, "Customer", class: "control-label" %>
        <div class="controls">
          <%= f.text_field :customer, class: "span12" %>
        </div>
      </div>
      <div class="control-group">
        <%= f.label :customer_type, "Type", class: "control-label" %>
        <div class="controls">
          <%= f.select(:customer_type, [["All","All"],["Bank","Bank"],["Atm", "Atm"]], {:prompt => 'Choose Type',:selected=>f.object.customer_type },{:class =>'span12'}) %>
        </div>
      </div>

      <div class="control-group">
        <%= f.label :language, class: "control-label" %>
        <div class="controls">
          <%= f.text_field :language, class: "span12" %>
        </div>
      </div>
      <div class="control-group">
        <%= f.label :no_of_locations, class: "control-label" %>
        <div class="controls">
          <%= f.text_field :no_of_locations, class: "span12" %>
        </div>
      </div>
      <div class="control-group">
        <%= f.label :lat, class: "control-label" %>
        <div class="controls">
          <%= f.text_field :lat, class: "span12" %>
        </div>
      </div>
      <div class="control-group">
        <%= f.label :lng, class: "control-label" %>
        <div class="controls">
          <%= f.text_field :lng, class: "span12" %>
        </div>
      </div>
      <div class="control-group pull-right">
        <%= f.submit "Save Location", class: 'btn' %>
      </div>
    </div>

    <div class="span7">
      <% if @location.errors.any? %>
        <div class="notice">
          <h3>Errors</h2>
          <ul>
          <% @location.errors.full_messages.each do |msg| %>
            <li class="error"><%= msg %></li>
          <% end %>
          </ul>
        </div>
      <% end %>
    </div>
  </div>
</fieldset>
<% end %>